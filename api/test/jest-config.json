{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "roots": ["<rootDir>/src/", "<rootDir>/test/"],
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/test/set-up-jest-env.ts"],
  "testRegex": "(.steps.ts|.spec.ts)$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/src/$1",
    "^@client/(.*)$": "<rootDir>/../client/src/$1",
    "^@shared/(.*)$": "<rootDir>/../shared/$1"
  }
}
