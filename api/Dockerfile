FROM node:22.2.0-alpine

ARG DB_HOST
ARG DB_PORT
ARG DB_NAME
ARG DB_USERNAME
ARG DB_PASSWORD
ARG JWT_SECRET
ARG JWT_EXPIRES_IN

ENV DB_HOST $DB_HOST
ENV DB_PORT $DB_PORT
ENV DB_NAME $DB_NAME
ENV DB_USERNAME $DB_USERNAME
ENV DB_PASSWORD $DB_PASSWORD
ENV JWT_SECRET $JWT_SECRET
ENV JWT_EXPIRES_IN $JWT_EXPIRES_IN


WORKDIR /app

COPY package.json pnpm-workspace.yaml pnpm-lock.yaml tsconfig.json ./
COPY api ./api
COPY shared ./shared

RUN corepack enable pnpm
RUN pnpm install

RUN pnpm api:build

EXPOSE 4000

CMD ["pnpm", "api:prod"]
