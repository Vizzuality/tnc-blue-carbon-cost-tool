name: Release Candidate and Deploy to Staging

on:
  workflow_dispatch:
    inputs:
      version:
        description: 'New release candidate version (e.g. rc-1.0.0)'
        required: true

concurrency:
  group: deploy-dev
  cancel-in-progress: false # Do not cancel the previous job if a new one is triggered, push the new job to the queue

jobs:
  check-branch:
    runs-on: ubuntu-latest
    steps:
      - name: Validate branch is staging
        run: |
          echo "Running on branch $GITHUB_REF"
          if [[ "$GITHUB_REF" != "refs/heads/staging" ]]; then
            echo "Error: This workflow must run on staging branch." >&2
            exit 1
          fi

  deploy:
    uses: ./.github/workflows/release-candidate.yml
    secrets: inherit
    with:
      version: ${{ github.event.inputs.version }}
